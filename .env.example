# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=cadence_cards

# Auth.js/SvelteKit Configuration
# Generate a random string for AUTH_SECRET (e.g., using: openssl rand -base64 32)
AUTH_SECRET=change_me_generate_random_string

# Application origin URL for CSRF protection
# Development: http://localhost:3000
# Production: https://your.domain.name
ORIGIN=http://localhost:3000

# Public Registration
# Set to "true" to allow public user registration, "false" to disable
ENABLE_PUBLIC_REGISTRATION=false

# Claude.AI API Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=change_me_your_claude_api_key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=1000
# Optional: Custom API URL (defaults to https://api.anthropic.com)
# CLAUDE_API_URL=https://api.anthropic.com
